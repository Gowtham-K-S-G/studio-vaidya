
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId}/{document=**} {
      // Users can only read and write their own documents.
      allow read, write: if isOwner(userId);
    }
    
    match /doctors/{doctorId} {
      allow read: if true; // Allow public read access to doctor list
      allow list: if true; // Allow public list access
      // Only signed-in users can add a new doctor.
      allow create: if isSignedIn(); 
      allow update, delete: if false; // Or add admin logic here
    }

    match /notifications/{notificationId} {
      // Only signed-in users can create notifications.
      allow create: if isSignedIn();
      // Users can only read notifications intended for them (based on userId field in notification).
      allow read, write: if isSignedIn() && isOwner(resource.data.userId);
    }
  }
}
