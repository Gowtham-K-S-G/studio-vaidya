
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId}/{document=**} {
      // Users can only read and write their own documents.
      allow read, write: if isOwner(userId);
    }
    
    match /doctors/{doctorId} {
      // Anyone can read the list of doctors.
      allow read: if true;
      // Only signed-in users can add a new doctor.
      allow create: if isSignedIn();
      // Only admins should be able to update or delete doctors (not implemented yet).
      allow update, delete: if false; 
    }

    match /notifications/{notificationId} {
      // Any signed-in user can create notifications.
      allow create: if isSignedIn();
      // A user can get a single notification if they are the owner.
      allow get: if isOwner(resource.data.userId);
      // A user can list their own notifications.
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
      // Allow user to update their own notifications (e.g. to mark as read).
      allow update: if isOwner(resource.data.userId);
       // Users cannot delete notifications for now.
      allow delete: if false;
    }
  }
}
