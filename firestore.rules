
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId}/{document=**} {
      // Users can only read and write their own documents.
      allow read, write: if isOwner(userId);
    }
    
    match /doctors/{doctorId} {
      // Anyone can read the list of doctors.
      allow read: if true;
      // Only signed-in users can add a new doctor.
      allow create: if isSignedIn();
      // Only admins should be able to update or delete doctors (not implemented yet).
      allow update, delete: if false; 
    }

    // A user can read/update their OWN notification, or create one.
    match /notifications/{notificationId} {
        allow get, update: if isSignedIn() && isOwner(resource.data.userId);
        allow create: if isSignedIn();
        allow delete: if false; // Users cannot delete notifications for now.
    }
    
    // A user can QUERY the notifications collection, but ONLY if they filter by their own user ID.
    // This is required for the dashboard component to fetch the user's notifications.
    match /notifications/{document=**} {
      allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
  }
}
