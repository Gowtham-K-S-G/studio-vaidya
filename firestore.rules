
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId}/{document=**} {
      // Users can only read and write their own documents.
      allow read, write: if isOwner(userId);
    }
    
    match /doctors/{doctorId} {
      // Anyone can read the list of doctors.
      allow read: if true;
      // Only signed-in users can add a new doctor.
      allow create: if isSignedIn();
      // Only admins should be able to update or delete doctors (not implemented yet).
      allow update, delete: if false; 
    }

    // Rule for accessing a SINGLE notification document.
    match /notifications/{notificationId} {
        // A user can read/update a single notification if they are the owner.
        allow get, update: if isSignedIn() && isOwner(resource.data.userId);
        // Any signed-in user can create notifications.
        allow create: if isSignedIn();
         // Users cannot delete notifications for now.
        allow delete: if false;
    }
    
    // Rule for QUERYING the notifications collection.
    match /notifications/{document=**} {
        // A user can list (query) notifications only if they are filtering by their own userId.
        // This is crucial for allowing the dashboard query to work securely.
        allow list: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }
  }
}
