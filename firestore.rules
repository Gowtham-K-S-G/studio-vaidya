
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    match /doctors/{doctorId} {
      allow read: if true; // Allow public read access to doctor list
      allow list: if true; // Allow public list access
      // Temporarily allow anyone to create a doctor for testing.
      // This will be changed back to isSignedIn() after auth is implemented.
      allow create: if true; 
      allow update, delete: if false; // Or add admin logic here
    }
  }
}
