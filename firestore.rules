rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------
    // Helper functions
    // ----------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ----------------------------
    // Users collection
    // ----------------------------
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // ----------------------------
    // Doctors collection
    // ----------------------------
    match /doctors/{doctorId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if false;
    }

    // ----------------------------
    // Health Records collection
    // ----------------------------
    match /health_records/{recordId} {
      // Rule for single document access (get, create, update, delete)
      allow write: if isOwner(request.resource.data.userId);

      // Rule for LIST and GET operations.
      // This allows a user to query the collection if they filter by their own UID,
      // and it allows them to get a single document if they are the owner.
      allow read: if isOwner(resource.data.userId);
    }
  }
}
