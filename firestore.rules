
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper Functions
    // -------------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // Collection Rules
    // -------------------------------------------------------------------------

    match /users/{userId}/{document=**} {
      // Users can only read and write their own documents.
      allow read, write: if isOwner(userId);
    }
    
    match /doctors/{doctorId} {
      // Anyone can read the list of doctors.
      allow read: if true;
      // Only signed-in users can add a new doctor.
      allow create: if isSignedIn();
      // Only admins should be able to update or delete doctors (not implemented yet).
      allow update, delete: if false; 
    }

    match /notifications/{notificationId} {
      // Only signed-in users can create notifications.
      allow create: if isSignedIn();
      // A user can read notifications where their UID is in the 'userId' field.
      // This rule allows a query like: firestore.collection('notifications').where('userId', '==', auth.uid)
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Allow user to update their own notifications (e.g. to mark as read)
      allow write: if isOwner(resource.data.userId);
    }
  }
}
