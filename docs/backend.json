
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile within the V-AI-DYA system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "firstName": {
          "type": "string",
          "description": "User's first name."
        },
        "lastName": {
          "type": "string",
          "description": "User's last name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "dateOfBirth": {
          "type": "string",
          "description": "User's date of birth.",
          "format": "date-time"
        },
        "gender": {
          "type": "string",
          "description": "User's gender."
        },
        "preferredLanguage": {
          "type": "string",
          "description": "User's preferred language for interacting with the VHA."
        },
        "contactNumber": {
          "type": "string",
          "description": "User's contact phone number."
        },
        "address": {
          "type": "string",
          "description": "User's address."
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "email",
        "dateOfBirth",
        "gender",
        "preferredLanguage",
        "contactNumber",
        "address"
      ]
    },
    "Dashboard": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Dashboard",
      "type": "object",
      "description": "Represents a user's personalized dashboard within the V-AI-DYA system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the dashboard."
        },
        "userId": {
          "type": "string",
          "description": "Reference to UserProfile. (Relationship: UserProfile 1:1 Dashboard)"
        },
        "lastLogin": {
          "type": "string",
          "description": "The time of the user's last login.",
          "format": "date-time"
        },
        "recentActivities": {
          "type": "array",
          "description": "A list of user's recent activities on the dashboard.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "userId"
      ]
    },
    "Doctor": {
      "title": "Doctor",
      "description": "Represents a doctor's professional information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Doctor's full name."
        },
        "specialty": {
          "type": "string",
          "description": "Doctor's medical specialty."
        },
        "hospital": {
          "type": "string",
          "description": "The hospital or clinic where the doctor practices."
        },
        "address": {
          "type": "string",
          "description": "The address of the hospital or clinic."
        },
        "phone": {
          "type": "string",
          "description": "Doctor's contact phone number."
        },
        "avatarId": {
          "type": "string",
          "description": "An identifier for the doctor's avatar image."
        },
        "location": {
          "type": "object",
          "description": "The geographical location of the hospital.",
          "properties": {
            "lat": {
              "type": "number",
              "description": "Latitude"
            },
            "lng": {
              "type": "number",
              "description": "Longitude"
            }
          },
          "required": [
            "lat",
            "lng"
          ]
        }
      },
      "required": [
        "name",
        "specialty",
        "hospital",
        "address",
        "phone",
        "avatarId"
      ]
    },
    "HealthRecord": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "HealthRecord",
      "type": "object",
      "description": "Represents a single health-related action or record for a user.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user this record belongs to."
        },
        "title": {
          "type": "string",
          "description": "A summary title for the health record."
        },
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the action occurred."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags to categorize the record (e.g., 'Appointment', 'Medication')."
        },
        "content": {
          "type": "object",
          "properties": {
            "notes": {
              "type": "string",
              "description": "Detailed notes about the action."
            },
            "reports": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              },
              "description": "Links to any associated reports."
            }
          }
        }
      },
      "required": ["userId", "title", "date", "tags", "content"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/doctors/{doctorId}": {
      "schema": {
        "$ref": "#/backend/entities/Doctor"
      },
      "description": "Stores information about doctors. Publicly readable but writable only by admins (future)."
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information. Only the authenticated user can access their own profile."
    },
    "/health_records/{recordId}": {
      "schema": {
        "$ref": "#/backend/entities/HealthRecord"
      },
      "description": "Stores a log of user health actions. Only the authenticated user can access their own records."
    }
  }
}
